<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFEFDF"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <include
        android:id="@+id/include"
        layout="@layout/voice_btn_layout"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/imageButtonLocalSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00FFFFFF"
        android:visibility="gone"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_manage"
        android:text="Set address"/>

    <EditText
        android:id="@+id/editTextSetAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonLocalSettings"
        android:hint="address"
        android:singleLine="true"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/buttonSetAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/imageButtonLocalSettings"
        android:layout_alignStart="@+id/imageButtonLocalSettings"
        android:layout_below="@+id/editTextSetAddress"
        android:background="#00FFFFFF"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_set_as"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonCulture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="#FF33AA00"
                android:singleLine="true"
                android:text="Culture"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonSports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="#FFFF6600"
                android:text="Sports"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonExhibitions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="#FFAAAA00"
                android:singleLine="true"
                android:text="Exhibitions"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonWorld"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF00AAAA"
                android:text="World"
                android:layout_marginRight="1dp"
                android:singleLine="true"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonCinema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF3A3A3A"
                android:text="Cinema"
                android:singleLine="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonCuriosities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="#FFFABA6A"
                android:text="Curiosities"
                android:textAllCaps="false"
                
                android:textColor="#FFFAFAFA"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>